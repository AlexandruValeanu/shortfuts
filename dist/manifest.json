{
    "manifest_version": 2,

    "name": "SHORTFUTS 19",
    "description":
        "Exposes keyboard shortcuts for FIFA 19 FUT web app. Click the icon in address bar for a list of supported hotkeys.",
    "version": "2.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "commands": {
        "buyNow": {
            "suggested_key": {
                "default": "Alt+N",
                "mac": "Alt+N"
            },
            "description": "Executes \"Buy Now\" on the current item"
        }
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/contentScript.js"]
        }
    ],

    "permissions": []
}
