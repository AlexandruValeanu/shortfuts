{
    "manifest_version": 2,

    "name": "shortfuts",
    "description":
        "Exposes keyboard shortcuts for FIFA Ultimate Team (FUT) web app.",
    "version": "3.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "commands": {
        "command0": {
            "description": "Toggles the extension on and off"
        },
        "command1": {
            "description": "Pulls in FUTBIN data for the current item",
            "suggested_key": {
                "default": "Alt+F"
            }
        },
        "command2": {
            "description": "Stores current item in the club",
            "suggested_key": {
                "default": "Alt+S"
            }
        },
        "command3": {
            "description": "Buys the current item for BIN price"
        },
        "command4": {
            "description":
                "Compares price of the current item with other items on the market",
            "suggested_key": {
                "default": "Alt+C"
            }
        },
        "command5": {
            "description": "Quick sells the current item"
        },
        "command6": {
            "description": "Sends current item to transfer list"
        },
        "command7": {
            "description": "Lists the current item for minimum BIN"
        },
        "command8": {
            "description":
                "Lists the current item (with currently selected price range)"
        },
        "command9": {
            "description": "Buys a bronze pack",
            "suggested_key": {
                "default": "Alt+B"
            }
        }
    },

    "content_scripts": [
        {
            "matches": ["*://www.easports.com/*fifa/ultimate-team/web-app/*"],
            "js": ["js/contentScript.js"]
        }
    ],

    "content_security_policy":
        "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

    "permissions": [
        "storage",
        "https://www.futbin.com/",
        "http://www.futbin.com/"
    ]
}
